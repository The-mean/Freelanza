{
    "buildCommand": "next build",
    "outputDirectory": ".next",
    "ignoreCommand": "git diff HEAD^ HEAD --quiet ./",
    "installCommand": "npm install",
    "framework": "nextjs",
    "cleanUrls": true,
    "excludeFiles": [
        "backend/**",
        "freelanza-frontend/**"
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}